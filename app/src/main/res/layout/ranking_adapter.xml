<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_championship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Championship"
            android:textColor="@color/primary_material_dark" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Team"
            android:textColor="@color/primary_material_dark"
            android:layout_span="10"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P|"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_number_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J|"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_number_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V|"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_number_defeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D|"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_empate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E|"
            />

        <TextView
            android:id="@+id/tv_goals_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GP|"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_goals_against"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GC|"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SG|"
            android:layout_gravity="center" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_span="17" />

    </TableRow>


</TableLayout>
