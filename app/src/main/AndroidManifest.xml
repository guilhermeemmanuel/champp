<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asus.embedded.champp" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".NewChampActivity"
            android:label="@string/title_activity_new_champ" >
        </activity>
        <activity
            android:name=".ChampCharacteristicsActivity"
            android:label="@string/title_activity_champ_characteristics" >
        </activity>
        <activity
            android:name=".AddParticipantActivity"
            android:label="@string/title_activity_add_participant" >
        </activity>
        <activity
            android:name=".ParticipantCharacteristcsActivity"
            android:label="@string/title_activity_participant_characteristcs" >
        </activity>
        <activity
            android:name=".CupActivity"
            android:label="@string/title_activity_cup" >
        </activity>
        <activity
            android:name=".LeagueActivity"
            android:label="@string/title_activity_league" >
        </activity>
        <activity
            android:name=".AddIntegrantActivity"
            android:label="@string/title_activity_add_integrant" >
        </activity>
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ModalActivity"
            android:label="@string/title_activity_modal" >
        </activity>
        <activity
            android:name=".SettingsChampActivity"
            android:label="@string/title_activity_settings_champ" >
        </activity>
    </application>

</manifest>
