<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5sp">
        <ImageView
            android:id="@+id/icon_champ"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/champ_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/delete_champ_bt"
            android:gravity="center_horizontal"
            android:layout_alignTop="@+id/delete_champ_bt"
            android:layout_toRightOf="@+id/icon_champ"
            android:layout_toEndOf="@+id/icon_champ" />

        <Button
            style="@style/btn_white_large"
            android:id="@+id/delete_champ_bt"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/btnDelete"
            android:onClick="deleteItem"
            android:layout_gravity="center" />

    </RelativeLayout>

</RelativeLayout>
